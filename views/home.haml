!!!
%html
	%head
		%script(src="/scripts/angular.js")
		%script(src="/scripts/autocomplete.js")
		%script(src="/scripts/home.js")
		:css
			.ac-items{
			background-color: #F6F3F3;
			color: #A3A3A3;
			}
			.ac-wrapper{
			width: 40%;
			}
			.ac-wrapper *{
			width: inherit;
			}

	%body{:"ng-app"=>"mp3Reader", :"ng-controller"=>"homeCtrl"}
		%div
			%ng-autocomplete{:'on-select'=>'clicked' ,:'advanced-display'=>"item['title'] + ' by ' + item['artist']", :'retrieval-method'=>"getFiles", :'max-results'=>"15", :'min-length'=>"3"}
			%div
				{{selected}}
